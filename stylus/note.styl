.Note
	width 90% 
	min-height 150px 
	overflow hidden
	word-wrap break-word
	margin 25px 0px 25px 0px
	white-space pre-wrap
	float left
	clear both
	box-shadow 5px 12px 20px -4px rgba(0,0,0,0.43)
	cursor pointer
	transition all 200ms 
	border-radius 2px
	padding 5%
	&:hover
		box-shadow 12px 20px 20px -4px rgba(0,0,0,0.43)
	
	h2
		font-size 20px 
		font-weight 600  
	p 
		margin-top 30px 
	

// bg
.White
	background white 
.Ametyst
	background Ametyst 
.PeterRiver
	background PeterRiver 	
.Emerald
	background Emerald 	
.Turquoise
	background Turquoise 	
.SunFlower
	background SunFlower 	
.Alizarin
	background Alizarin 
	

.popUp
	position absolute
	bottom 5% 
	left 20%   
	width 50% 
	height 50% 
	box-shadow 0px 0px 0px 2000px rgba(0,0,0,0.7)
	&:hover
		box-shadow 0px 0px 0px 2000px rgba(0,0,0,0.7)

.hide
	display none
