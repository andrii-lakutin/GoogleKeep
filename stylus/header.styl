.header 
	position fixed
	background rgb(255,187,0) 
	width 100%
	color rgba(0,0,0,.87) 
	font-weight 600 
	height 45px 
	line-height 45px 
	z-index 1 
	
	img
		float left
		margin 12px 22px 12px 30px  
		cursor pointer
		
	h2
		float left
		
	.view
		float right
		background url(img/list.svg) no-repeat
		height 20px
		width 20px   	
		margin 12px
		margin-right 30px 
		cursor pointer
	.view-list
		background url(img/list.svg) no-repeat 
	.view-grid
		background url(img/grid.svg) no-repeat 


